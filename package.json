{
  "name": "xmb-launcher",
  "version": "1.0.0",
  "description": "Interfaz estilo XMB en Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tuapp.xmb",
    "productName": "XMB Launcher",
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tu-usuario",
        "repo": "tu-repo"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  }
}
